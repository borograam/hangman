<test>
    <div id="test-div" onclick={ add }><span>{ state.num }</span></div>

    <script>
        import "./test.scss"
        export default {
            state: {
                num: 0,
            },
            add(e) {
                e.preventDefault();
                this.state.num++;
                this.update();
            }
        };
    </script>
</test>